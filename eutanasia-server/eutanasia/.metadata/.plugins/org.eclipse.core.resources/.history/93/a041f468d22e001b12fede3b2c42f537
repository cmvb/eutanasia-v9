package com.eutanasia.eutanasia.service.impl;

import javax.transaction.Transactional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.eutanasia.eutanasia.dao.IArchivosDao;
import com.eutanasia.eutanasia.dto.ArchivoDTO;
import com.eutanasia.eutanasia.service.IArchivoService;

@Service
public class SFTPServicio implements IArchivoService {

	@Autowired
	private IArchivosDao archivosDAO;

	@Transactional
	@Override
	public ArchivoDTO subirImagen(ArchivoDTO archivoDto) {
		//guardar archivos en sftp
        Util.archivosSftpEscalamiento(solicitudRequest.getListaAdjunto(), idSolicitud, solicitudRequest.getDocumentoCliente(), sftpServicio, escParametrizacionDao);
        
        
        guardarAdjuntos(solicitudRequest.getListaAdjunto(), solicitud);
		return archivosDAO.subirImagen(archivoDto);
	}

}
