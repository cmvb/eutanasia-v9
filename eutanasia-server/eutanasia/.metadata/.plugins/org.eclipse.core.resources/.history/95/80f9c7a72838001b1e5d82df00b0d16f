package com.eutanasia.eutanasia.enums;

public enum EPlantillaCorreo {
	INVITACION_EVENTO("invitacionEvento.html"), SOLICITUD_MATERIAL("solicitudMaterial.html"),
	DONACIONES("donaciones.html"), SALUDOS_PETICIONES("saludosPeticiones.html");

	private final String nombre;

	private EPlantillaCorreo(String nombre) {
		this.nombre = nombre;
	}

	public String getNombre() {
		return nombre;
	}

	public String getNombrePorId(int ordinal) {
		String result = "";
		switch (ordinal) {
		case 0:
			result = INVITACION_EVENTO.getNombre();
			break;

		case 1:
			result = SOLICITUD_MATERIAL.getNombre();
			break;

		case 2:
			result = DONACIONES.getNombre();
			break;

		case 3:
			result = SALUDOS_PETICIONES.getNombre();
			break;
		}

		return result;
	}

}
